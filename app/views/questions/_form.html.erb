<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'textfield_width' %>
    <%= f.label :description%>
    <%= f.text_area :description, :rows => 6, :class => 'textfield_width' %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :last_edit_time, :value => Time.now %>
    <%= f.hidden_field :last_activity_time, :value => Time.now %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
